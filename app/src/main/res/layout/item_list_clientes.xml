<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clientes.ItemListClientes">

    <!-- Contenido principal de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <!-- Toolbar superior opcional -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Joyeria Josselyn"
                android:paddingTop="16dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#9943C3"
                android:gravity="right"/>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTituloClientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clientes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:textColor="#222222"/>

                <EditText
                    android:id="@+id/etBuscarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Buscar cliente"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:padding="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnAgregarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar cliente"
                    android:backgroundTint="#43C37B"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    card_view:cardCornerRadius="12dp"
                    android:background="@android:color/white"
                    card_view:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvNombreCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del cliente"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:id="@+id/tvNumeroCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número: ____"
                            android:textColor="#444444"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnDetallesCliente"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver detalles"
                                android:layout_marginEnd="12dp"/>

                            <Button
                                android:id="@+id/btnEliminar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eliminar"
                                android:backgroundTint="#FFA726"
                                android:layout_marginEnd="12dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_drawer"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>
