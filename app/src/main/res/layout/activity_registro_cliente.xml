<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joyeria Josselyn"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9943C3"
        android:layout_marginBottom="16dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/tvTituloRegistrarClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Cliente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textColor="#222222"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre del Cliente"/>
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="200dp"
        android:textSize="22sp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese nombre"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido paterno"/>

    <EditText
        android:id="@+id/etApellidoPaterno"
        android:layout_width="250dp"
        android:textSize="22sp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese apellido paterno"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido materno"/>

    <EditText
        android:id="@+id/etApellidoMaterno"
        android:layout_width="270dp"
        android:textSize="22sp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese apellido manterno"/>

    <TextView
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Teléfono"/>

    <EditText
        android:id="@+id/etTelefono"
        android:layout_width="260dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Ingrese número de teléfono"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Correo"/>
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="200dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Ingrese un correo"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="País"/>
    <EditText
        android:id="@+id/etPaís"
        android:layout_width="200dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="País"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Estado"/>

    <EditText
        android:id="@+id/etEstado"
        android:layout_width="200dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Estado"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Código postal"/>
    <EditText
        android:id="@+id/etCP"
        android:layout_width="200dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:hint="Código Postal"/>

        <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento"/>
        <DatePicker
            android:id="@+id/etFechaNacimiento"
            android:layout_width="200dp"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:calendarViewShown="true"
            android:datePickerMode="calendar"
            android:focusable="false"
            android:clickable="true" />

    </LinearLayout>
    </ScrollView>
