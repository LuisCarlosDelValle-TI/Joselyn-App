<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joyeria Josselyn"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9943C3"
        android:layout_marginBottom="16dp"
        android:gravity="right"/>

    <TextView
        android:id="@+id/tvTituloDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del cliente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textColor="#222222" />

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre del Cliente"/>

    <TextView
        android:id="@+id/etNombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:text="Nombre del Cliente"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido paterno"/>

    <TextView
        android:id="@+id/etApellidoPaterno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Apellido paterno"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido materno"/>

    <TextView
        android:id="@+id/etApellidoMaterno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Apellido materno"/>

    <TextView
        android:layout_width="200dp"
        android:layout_marginBottom="22dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Teléfono"/>

    <TextView
        android:id="@+id/etTelefono"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Teléfono"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Correo"/>

    <TextView
        android:id="@+id/etCorreo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Correo"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="País"/>

    <TextView
        android:id="@+id/etPaís"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="País"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Estado"/>

    <TextView
        android:id="@+id/etEstado"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Estado"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Código postal"/>

    <TextView
        android:id="@+id/etCP"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Código postal"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento"/>

    <TextView
        android:id="@+id/etFechaNacimiento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"
        android:text="Fecha de nacimiento"/>

    <Button
        android:id="@+id/btnEditarCliente"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:text="Editar cliente"
        android:backgroundTint="#9943C3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />


</LinearLayout>
</ScrollView>