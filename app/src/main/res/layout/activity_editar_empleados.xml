<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joyeria Josselyn"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9943C3"
        android:layout_marginBottom="16dp"
        android:gravity="right"/>
    <TextView
        android:id="@+id/tvTituloDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del empleado"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textColor="#222222" />

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre del empleado"/>

    <TextView
        android:id="@+id/tvNombreEmpleado"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="(Nombre del empleado)"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido paterno"/>

    <TextView
        android:id="@+id/tvApellidoPaterno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="(Apellido paterno)"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Apellido materno"/>

    <TextView
        android:id="@+id/tvApellidoMaterno"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="(Apellido materno)"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Teléfono"/>

    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="(Número de telefono)"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="22dp"/>

    <TextView
        android:layout_width="200dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Salario"/>
    <TextView
        android:id="@+id/tvSalario"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="(Salario)"
        android:textSize="20sp"
        android:textColor="#242424"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnEditarEmpleado"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Editar empleado"
        android:backgroundTint="#9943C3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

</LinearLayout>